# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/price_checker

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Cache Configuration
CACHE_TTL_SECONDS=300

# Currency Configuration
# Base currency for price comparisons (always USD)
BASE_CURRENCY=USD
# Exchange rate API URL (uses free ExchangeRate-API by default)
# Alternative: https://openexchangerates.org/api/latest.json?app_id=YOUR_KEY
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest/USD
# Cache TTL for exchange rates in hours (24 hours = daily refresh)
EXCHANGE_RATE_CACHE_TTL_HOURS=24

# Logging
RUST_LOG=info,price_checker_extension=debug

# Scraper Configuration
USER_AGENT=PriceCheckerBot/1.0 (+https://yoursite.com/bot)
REQUEST_TIMEOUT_SECONDS=30
MAX_RETRIES=3
RATE_LIMIT_PER_SECOND=2

# Mock Data (set to true for demonstration without API credentials)
USE_MOCK_DATA=true

# ZenRows Web Scraping API Configuration
# Sign up at: https://www.zenrows.com/ (14-day free trial with 1,000 requests)
# ZenRows handles proxies, JavaScript rendering, and CAPTCHA solving
# Pricing: $69/month for 250K requests (basic), $249/month for 1M requests
ZENROWS_API_KEY=

# Product Matching Configuration
# Minimum confidence score (0-100) for product matches
# 100 = Exact UPC/ASIN match, 90 = Model+Brand match, 70 = Title similarity
PRODUCT_MATCH_MIN_CONFIDENCE=70

# eBay Developer API Configuration
# Sign up at: https://developer.ebay.com/
EBAY_ENABLED=false
EBAY_APP_ID=
EBAY_CERT_ID=
EBAY_DEV_ID=

# Amazon Product Advertising API Configuration
# Sign up at: https://affiliate-program.amazon.com/
# Requires Amazon Associates account with sales history
AMAZON_ENABLED=false
AMAZON_ACCESS_KEY=
AMAZON_SECRET_KEY=
AMAZON_PARTNER_TAG=
AMAZON_MARKETPLACE=US

# Jumia KOL Affiliate Program Configuration
# Sign up at: https://kol.jumia.com/
JUMIA_ENABLED=false
JUMIA_AFFILIATE_ID=

# Konga Affiliate Program Configuration
# Sign up at: https://affiliate.konga.com/
KONGA_ENABLED=false
KONGA_AFFILIATE_ID=
KONGA_API_KEY=
